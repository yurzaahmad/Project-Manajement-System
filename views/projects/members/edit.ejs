<%- include('../../partials/headers'); -%>

<head>
    <title>CSS Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Style the side navigation */
        .sidenav {
            height: 100%;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
        }


        /* Side navigation links */
        .sidenav a {
            color: white;
            padding: 16px;
            text-decoration: none;
            display: block;
        }

        /* Change color on hover */
        .sidenav a:hover {
            background-color: #ddd;
            color: black;
        }

        /* Style the content */
        .content {
            margin-left: 200px;
            padding-left: 20px;
        }
    </style>
</head>

<div class="sidenav" style='margin-top: 70px;'>
    <a href="#">Overview</a>
    <a href="#">Activity</a>
    <a href="/projects/members">Members</a>
    <a href="#">Issues</a>
</div>
<div class="container container-card" style="margin-top: 90px;">
    <h1>Update Member</h1>
    <hr class="new4">
    <form action="" method="POST" id="form-siswa">
        <div class="form-group row">
            <label for="nameMember" class="col-sm-2 col-form-label">Members</label>
            <div class="col-sm-10">
                <input class="form-control" id="nameMember" name="nameMember" value="<%= member.fullname%>">
            </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Position</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="inputposition" id="gridRadios1"
                            value="Manager" <%= member.role == 'Manager' ? 'checked' : ''%>>
                        <label class="form-check-label" for="gridRadios1">
                            Manager
                        </label>
                    </div>
                    <br><br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="inputposition" id="gridRadios2"
                            value="Software Developer" <%= member.role == 'Software Developer' ? 'checked' : ''%>>
                        <label class="form-check-label" for="gridRadios2">
                            Software Developer
                        </label>
                    </div>
                    <br><br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="inputposition" id="gridRadios3"
                            value="Quality Assurance" <%= member.role == 'Quality Assurance' ? 'checked' : ''%>>
                        <label class="form-check-label" for="gridRadios3">
                            Quality Assurance
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>