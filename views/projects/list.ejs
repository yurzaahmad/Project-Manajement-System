<%- include('../partials/headers'); -%>


<div class="container container-card">
    <h1>Projects</h1>
    <br>
    <hr>
    <form action="" method="GET" id="form-search">
        <input type="hidden" id="page" name="page" value="1">
        <h2>Filters</h2>
        <br />
        <br />
        <form action="/" method="GET" id="form-siswa">
            <div class="form-group">
                <input type="checkbox" class="form-check-input" name="checkId" id="checkId" />
                <label for="exampleInputEmail1"> ID</label>
                <input type="integer" class="form-control" name="id" value="" id="Id" aria-describedby="emailHelp"
                    placeholder="ID" />
            </div>

            <div class="form-group">
                <input type="checkbox" class="form-check-input" name="checkString" id="checkString" />
                <label for="exampleInputEmail1">Name</label>
                <input type="string" class="form-control" name="string" value="" id="String"
                    aria-describedby="emailHelp" placeholder="Name" />
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="checkBoolean" id="checkBoolean" />
                <label class="form-check-label" for="exampleCheck1">Member</label>
                <select class="custom-select custom-select-lg mb-3" name="boolean">
                    <option selected>Choose the member</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>

            <button type="submit" class="btn btn-dark">SEARCH</button>

        </form>
        <br><br>

        <div style="margin:auto">
            <h5>Option Column</h5>
            <form action="/projects" method="post" style="margin-left: auto;">
                <div class="row">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="cid" name="checkid" value="true">
                            <label class="form-check-label" for="cid">
                                ID
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="cname" name="checkname" value="true">
                            <label class="form-check-label" for="cname">
                                Name
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="cmembers" name="checkmembers"
                                value="true">
                            <label class="form-check-label" for="cmembers">
                                Members
                            </label>
                        </div>
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-dark">apply</button>
            </form>
        </div>
        <br><br>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Members</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index) =>{ %>
                <tr>
                    <td><%= item.projectid %></td>
                    <td><%= item.name %></td>
                    <td>
                        <a href="edit/<%= item.id %>" class="btn btn-danger">edit</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="add" class="btn btn-dark">Add</a>
    </form>
</div>

</body>

</html>